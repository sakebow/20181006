<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>湖北大学学生成绩管理系统</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <link rel="stylesheet" href="~/Content/layui.css" />
    <link rel="stylesheet" href="~/Content/modules/layer/default/layer.css" />
    <link rel="stylesheet" href="~/Content/Admin/AdminLayout.css" />
</head>
<body>
    <!--顶上黑色页眉-->
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container" style="margin-top: 0">
            <div class="navbar-header">
                <!--根据登陆情况决定跳转页面-->
                @if (Session["account"].ToString() == "请先登录")
                {
                    @Html.ActionLink("湖北大学学生成绩管理系统", "../Login/Login", "Login", new { @class = "navbar-brand" })
                }
                else
                {
                    @Html.ActionLink("湖北大学学生成绩管理系统", "../Home/Home", "Home", new { @class = "navbar-brand" })
                }
            </div>
        </div>
    </div>

    <div class="container body-content low-body-container" style="margin-top: 0">
        <!--左边侧栏菜单-->
        <div class="layui-collapse sidebar-menu sidebar-menu-custom">
            <div class="layui-colla-item">
                <h2 class="layui-colla-title">管理员</h2>
            </div>
            <div class="layui-colla-item">
                <h2 class="layui-colla-title">课程中心</h2>
                <div class="layui-colla-content">
                    <ul class="menu-list menu-list-custom">
                        <li>添加课程</li>
                        <li>查看课程</li>
                    </ul>
                </div>
            </div>
            <div class="layui-colla-item">
                <h2 class="layui-colla-title">新闻公告</h2>
                <div class="layui-colla-content">
                    <ul class="menu-list menu-list-custom">
                        <li>查看新闻</li>
                        <li>查看公告</li>
                        <li>添加新闻</li>
                        <li>添加公告</li>
                    </ul>
                </div>
            </div>
            <div class="layui-colla-item">
                <h2 class="layui-colla-title">申请中心</h2>
                <div class="layui-colla-content">
                    <ul class="menu-list menu-list-custom">
                        <li>学生申请</li>
                        <li>教师申请</li>
                    </ul>
                </div>
            </div>
            <div class="layui-colla-item">
                <h2 class="layui-colla-title">课程分配</h2>
                <div class="layui-colla-content">
                    <ul class="menu-list menu-list-custom">
                        <li>课程 & 教师</li>
                        <li>课程 & 教室</li>
                        <li>课程 & 时间</li>
                    </ul>
                </div>
            </div>
        </div>
        <!--右边主体-->
        <div class="right-body">
            @RenderBody()
        </div>
        <!--页脚-->
        <footer style="margin-top: 0" class="clearfix">
            <hr />
            <p>2016级软件工程产业计划1601班 第二小组 -- 柳景兴、付凯文制</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <!--引入Lay UI必要脚本-->
    <script src="~/layui.js" charset="utf-8"></script>
    <script>
        layui.use(['element', 'layer'], function () {
            var element = layui.element;
            var layer = layui.layer;
        });
    </script>
</body>
</html>