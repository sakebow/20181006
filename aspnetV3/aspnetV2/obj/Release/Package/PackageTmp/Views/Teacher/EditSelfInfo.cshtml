@model aspnetV2.Models.教师详细信息视图
@{
    ViewBag.Title = "EditSelfInfo";
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}

<head>
    <link href="~/Content/Admin/CreateNews.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Admin/CreateCourse.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Admin/ShowCourse.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Teacher/ShowClassInfo.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Student/ShowCourse.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Student/StudentInfo.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Admin/CreateCourse.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Student/EditSelfInfo.css" rel="stylesheet" type="text/css" />
    <link href="~/layui/css/layui.css" rel="stylesheet" type="text/css" />
    <script src="~/scripts/jquery-1.10.2.js"></script>
    <script src="~/scripts/customjs/CascadeAreaInfo.js"></script>
</head>

<div class="show-header">
    <h2>教师 - 修改个人信息</h2>
</div>

<div class="container extra-padding">
    @using (Html.BeginForm("EditSelfInfo", "Teacher", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="table-classify-header">基本信息</div>
        <table>
            <tr>
                <td><label>教师学号：</label></td>
                <td><input type="text" readonly value="@Model.教师工号" class="form-control" /></td>
                <!--这里的value填入学生学号，但是无法修改-->
                <td rowspan="4" colspan="2">
                    <div class="file-upload">
                        <input type="file" name="photo" />
                    </div>
                </td>
            </tr>
            <tr>
                <td><label>教师姓名：</label></td>
                <td><input type="text" readonly value="@Model.教师姓名" class="form-control" name="name" /></td>
            </tr>
            <tr>
                <td><label>身份证类别：</label></td>
                <td><input type="text" readonly value="@Model.身份证类别名称" class="form-control" /></td>
            </tr>
            <tr>
                <td><label>身份证号：</label></td>
                <td><input type="text" readonly value="@Model.身份证号" class="form-control" /></td>
            </tr>
            <tr>
                <td><label>性别：</label></td>
                <td>
                    @Html.DropDownList("sex", ViewBag.sex as SelectList, "男", new { @class = "form-control" })
                </td>
                <td><label>密码：</label></td>
                <td><input type="text" value="" class="form-control" name="pwd" /></td>
            </tr>
            <tr>
                <td><label>出生日期：</label></td>
                <td>
                    <input type="text" id="test1" class="layui-input" name="birth" value="@Model.出生日期" />
                </td>
            </tr>
        </table>

        <div class="table-classify-header">教师信息</div>
        <table>
            <tr>
                <td><label>学校：</label></td>
                <td><input type="text" name="school" class="form-control" value="@Model.学校名称" readonly /></td>
                <td><label>院系：</label></td>
                <td><input type="text" name="faculty" class="form-control" value="@Model.院系名称" readonly /></td>
            </tr>
        </table>

        <div class="table-classify-header">地点信息</div>
        <table>
            <tr>
                <td><label>国家：</label></td>
                <td>
                    @Html.DropDownList("country", ViewBag.cou as SelectList, "====请选择====", new { @class = "form-control" })
                </td>
                <td><label>省份：</label></td>
                <td>
                    @Html.DropDownList("province", ViewBag.pro as SelectList, "====请选择====", new { @class = "form-control" })
                </td>
                <td><label>城市：</label></td>
                <td>
                    @Html.DropDownList("city", ViewBag.cit as SelectList, "====请选择====", new { @class = "form-control" })
                </td>
                <td><label>区县：</label></td>
                <td>
                    @Html.DropDownList("area", ViewBag.are as SelectList, "====请选择====", new { @class = "form-control" })
                </td>
            </tr>
        </table>

        <div class="table-classify-header">其他信息</div>
        <table>
            <tr>
                <td><label>学习层次：</label></td>
                <td>
                    @Html.DropDownList("arrange", ViewBag.arr as SelectList, "====请选择====", new { @class = "form-control" })
                </td>
                <td><label>婚配情况：</label></td>
                <td>
                    @Html.DropDownList("marry", ViewBag.mar as SelectList, "====请选择====", new { @class = "form-control" })
                </td>
                <td><label>户籍：</label></td>
                <td>
                    @Html.DropDownList("household", ViewBag.hol as SelectList, "====请选择====", new { @class = "form-control" })
                </td>
            </tr>
            <tr>
                <td><label>联系电话：</label></td>
                <td><input type="tel" value="@Model.联系电话" name="tel" class="form-control" /></td>
                <td><label>QQ号码：</label></td>
                <td><input type="number" value="@Model.QQ号码" name="qq" class="form-control" /></td>
                <td><label>电子邮箱：</label></td>
                <td><input type="email" value="@Model.电子邮箱" name="mail" class="form-control" /></td>
            </tr>
            <tr>
                <td><label>政治面貌：</label></td>
                <td>
                    @Html.DropDownList("policy", ViewBag.pol as SelectList, @"====请选择====", new { @class = "form-control" })
                </td>
            </tr>
            <tr>
                <td colspan="4"><input type="submit" value="提交" class="btn" style="margin:0 auto;" /></td>
            </tr>
        </table>
    }
</div>

<script src="~/scripts/customjs/locateBody.js"></script>
<script src="~/scripts/laydate/laydate.js"></script>
<script src="~/layui/layui.js"></script>
<script>
    window.onload = function () {
        LocateBody();
        if ("@ViewBag.ErrorMessage" != "") {
            alert("@ViewBag.ErrorMessage")
        }
    }
</script>
<script>
    laydate.render({
        elem: '#test1' //指定元素
    });
</script>