@model aspnetV2.Models.学生详细信息视图
@{
    ViewBag.Title = "StudentInfo";
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}
<!--教师下的学生信息-->
<head>
    <link href="~/Content/Admin/ShowCourse.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Student/StudentInfo.css" rel="stylesheet" type="text/css" />
</head>

<div class="show-header">
    <h2>教师 - 查看学生信息</h2>
</div>
<!--
    分成两块：
        左侧是个人照片和其他信息
        右侧是个人详细信息
-->
<div class="container extra-padding">
    <div class="pic-slide-sidebar" id="parent">
        <div class="slide-pic" id="cc">
            <!--
                这些信息仅作参考，实际上应该从@Model中获取
                注：个人图片路径应该为：StudentPicture/学校名称/院系名称/专业名称/班级名称/姓名+学号.jpg（.png）
            -->
            @if (Model.证件照片路径 != null)
            {
                <img src="~/images/StudentPicture/@Model.证件照片路径" id="aa" />
            }
            else
            {
                <img src="~/images/CourseBooks/暂无图片.png" id="aa" />
            }
            <div class="slide-name-num number" title="196722111920052">@Model.学生学号</div>
            <div class="slide-name-num name">@Model.学生姓名</div>
        </div>
    </div>
    <div class="info-area">
        <!--基本信息-->
        <div class="table-classify-header">基本信息</div>
        <table>
            <tr>
                <td class="label-td col-sm-2">姓名</td>
                <td class="col-sm-3">@Model.学生姓名</td>
                <td class="label-td col-sm-2">性别</td>
                <td class="col-sm-3">@Model.性别</td>
            </tr>
            <tr>
                <td class="label-td col-sm-2">国籍</td>
                <td class="col-sm-3">@Model.国家名称</td>
                <td class="label-td col-sm-2">民族</td>
                <td class="col-sm-3">？？？？</td>
            </tr>
            <tr>
                <td class="label-td col-sm-2">身份证类型</td>
                <td class="col-sm-3">@Model.身份证类别名称</td>
                <td class="label-td col-sm-2">身份证号</td>
                <td class="col-sm-3">@Model.身份证号</td>
            </tr>
            <tr>
                <td class="label-td col-sm-2">政治面貌</td>
                <td class="col-sm-3">@Model.政治面貌类型</td>
                <td class="label-td col-sm-2">婚配情况</td>
                <td class="col-sm-3">@Model.婚配情况</td>
            </tr>
            <tr>
                <td class="label-td col-sm-2">籍贯</td>
                <td class="col-sm-3">@Model.国家名称 @Model.城市名称 @Model.区县名称</td>
                <td class="label-td col-sm-2">户籍</td>
                <td class="col-sm-3">@Model.户籍名称</td>
            </tr>
            <tr>
                <td class="label-td col-sm-2">家庭住址</td>
                <td class="col-sm-3" colspan="3" title="///">???</td>
            </tr>
            <tr>
                <td class="label-td col-sm-2">邮政编码</td>
                <td class="col-sm-3">@Model.邮政编码</td>
                <td class="label-td col-sm-2">出生日期</td>
                <td class="col-sm-3">@Model.出生日期</td>
            </tr>
        </table>
        <!--校内信息-->
        <div class="table-classify-header">学籍信息</div>
        <table>
            <tr>
                <td class="label-td col-sm-2">学号</td>
                <td class="col-sm-3">@Model.学生学号</td>
            </tr>
            <tr>
                <td class="label-td col-sm-2">学校</td>
                <td class="col-sm-3">@Model.学校名称</td>
                <td class="label-td col-sm-2">院系</td>
                <td class="col-sm-3">@Model.院系名称</td>
            </tr>
            <tr>
                <td class="label-td col-sm-2">专业</td>
                <td colspan="3">@Model.专业名称</td>
            </tr>
            <tr>
                <td class="label-td col-sm-2">是否转专业</td>
                <td class="col-sm-3">@Model.是否转专业</td>
                <td class="label-td col-sm-2">是否双学位</td>
                <td class="col-sm-3">@Model.是否双学位</td>
            </tr>
            <tr>
                <td class="label-td col-sm-2">学习层次</td>
                <td class="col-sm-3">@Model.学习层次</td>
            </tr>
        </table>
        <!--其他杂项信息-->
        <div class="table-classify-header">其他杂项信息</div>
        <table>
            <tr>
                <td class="label-td col-sm-2">联系电话</td>
                <td class="col-sm-3">@Model.联系电话</td>
                <td class="label-td col-sm-2">电子邮箱</td>
                <td class="col-sm-3">@Model.QQ号码 </td>
            </tr>
        </table>
    </div>
    <div class="clearfix"></div>
</div>
<script src="~/scripts/customjs/locateBody.js"></script>
<script src="~/scripts/customjs/onscorll.js"></script>
<script>
    window.onload = LocateBody;

    window.onscroll = Scroll;
</script>

