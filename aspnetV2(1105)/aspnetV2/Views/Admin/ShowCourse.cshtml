
@{
    ViewBag.Title = "管理员 - 课程中心";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!--
    非Post部分：单纯的展示课程
-->
<head>
    <link href="~/Content/Admin/ShowCourse.css" rel="stylesheet" type="text/css" />
</head>
<div class="show-header">
    <h2>管理员 - 展示课程</h2>
</div>
<table class="input-table-view">
    <tr>
        @using (Html.BeginForm("ShowCourse", "Admin", FormMethod.Post))
        {
            <!--
            Post方法提交：对应AdminController下的ShowCourse[HttpPost]方法，展示课程
                接收查询项目(searchChocie)、查询内容(searchContent)两个变量
                其中都并不是必须的变量，注意检测的时候添加判断
                其中查询内容使用模糊查找，即使用Contains()方法
            -->
            <td>
                <label class="distance-among-input">查询项目：</label>
            </td>
            <td>
                <select name="searchChoice" class="form-control">
                    <option>===请选择===</option>
                </select>
            </td>
            <td>
                <label class="distance-among-input">查询内容：</label>
            </td>
            <td><input type="text" name="searchContent" placeholder="不填默认查找所有" class="form-control" /></td>
            <td>
                <input type="submit" value="查找" class="btn distance-among-input" />
            </td>
        }
    </tr>
</table>
<!--
    说明：这一部分可以只使用@{ }进行操作，后台需要将大一到大四的课程视图传入ViewBag或者ViewData中。
    1、获取当前登录学生的所在学期、所在专业
    2、获取对应学期的视图，针对所在专业进行查找
-->
<div class="book-shelf">
    <div class="book-classfication">大一学期<span style="color: grey">CLASS</span></div>
    <!--
        book-item是教材栏，显示有教材图片、教材名称、课程操作（管理员特有），使用@foreach展示全部内容
        需要后台将大一到大四的全部课程放入ViewData或者ViewBag中传入前端
    -->
    <div class="book-shelf-space">
        <div class="book-item">
            <div class="book-image">
                <img src="~/images/CourseBooks/由上海外语教务出版社出版的大学英语（1）.jpg" />
            </div>
            <div class="book-name">大学英语（1）</div>
            <div class="operation">
                <div>编辑</div>
                <div>删除</div>
                <div>详情</div>
                <div class="clearfix"></div>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
</div>

<script>
    window.onload = function () {
        document.getElementsByClassName("body-content")[0].style.marginTop = document.getElementsByClassName("navbar")[0].offsetHeight + 'px';
    }
</script>
